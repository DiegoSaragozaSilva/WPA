{
    "manifest_version": 2,
    "name": "WPA (Web Privacy Analysis)",
    "version": "0.0.1",
    "description": "Analyses the current web page for security flaws and give it a score based on the security level.",

    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_popup": "popup/popup.html",
        "default_title": "WPA"
    },

    "background": {
        "scripts": ["scripts/wpa.js"]
    },

    "permissions": [
        "cookies",
        "webRequest",
        "storage",
        "tabs",
        "<all_urls>"
    ]
}

